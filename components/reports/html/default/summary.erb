            <h2>Summary</h2>

            <div id="summary-tabs">
                <% if auditstore.issues.any? %>
                <ul>
                    <li><a href="#graphs">Graphs</a></li>
                    <li><a href="#issue-list">Issues [<%=auditstore.issues.size%>]</a></li>
                </ul>

                <div id="graphs">


                    <div id='chart-issues-container' class="clear">
                        <div id='chart-issues' class="clear">
                        </div>
                    </div>
                    <br/>

                    <div id='pies' class="clear" style='width: 100%; height: 300px' >
                        <div id="chart-severities" style="width: 33.3%; height: 100%; float:left">
                        </div>

                        <div id="chart-elements" style="width: 33.3%; height: 100%; float:left">
                        </div>

                        <div id="chart-trust" style="width: 33.3%; height: 100%;float:left">
                        </div>

                        <div class='clear'>
                        </div>
                    </div>
                </div>

                <div id="issue-list">

                    <%= erb :search, { :id => 'summary_issues_tab' } %>

                    <%
                       half_sz = ( auditstore.issues.size / 2 ).round

                       left = auditstore.issues[0...half_sz]
                       right = auditstore.issues[half_sz..-1]

                       idx = 0
                    %>

                    <div style="float: left; width: 50%">
                        <% left.each do |issue| %>
                            <%= erb :summary_issue, :issue => issue, :i => idx %>
                            <% idx+=1 %>
                        <%end%>

                    </div>

                    <div>
                        <% right.each do |issue| %>
                            <%= erb :summary_issue, :issue => issue, :i => idx %>
                            <% idx+=1 %>
                        <%end%>

                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>
                        <p>&nbsp;</p>

                    </div>

                </div>
                <% else %>
                    <p>
                        <em>No issues have been identified.</em>
                    </p>
                <% end %>
            </div>
